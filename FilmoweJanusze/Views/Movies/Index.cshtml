@model PagedList.IPagedList<FilmoweJanusze.Models.Movie>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Dostępne filmy";
}

<div class="panel-group">
    <div class="panel">
        <div class="well-jm">
            <div class="col-xs-11">
                <h3>
                    @ViewBag.Title
                </h3>
            </div>
            @if (User.IsInRole("User") || User.IsInRole("Admin"))
            {
                <div class="dropdown col-xs-1 dropdownbutton">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <i class="glyphicon glyphicon-menu-down"></i>
                    </button>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Dodaj film", "Create")</li>
                    </ul>
                </div>
            }
            <div class="clearfix"></div>
        </div>

            <!-- FILTRACJA I SORTOWANIE-->
            @using (Html.BeginForm("Index", "Movies", FormMethod.Get, htmlAttributes: new { page = 1, @class = "form-inline" }))
            {
                <div class="panel-body sortfilter">
                    <div class="form-group">
                        <label>
                            Filtruj według:
                        </label>
                        <label>
                            Gatunku
                        </label>
                        @Html.DropDownList("Genre", null, "Wszystkie", new { @class = "form-control" })
                        <label>
                            Kraju produkcji
                        </label>
                        @Html.DropDownList("CountryProduction", null, "Wszystkie", new { @class = "form-control" })
                        <label>
                            Roku produkcji
                        </label>
                        @Html.DropDownList("Years", null, "Wszystkie", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Sortuj według:</label>
                        @Html.DropDownList("SortParam", null, new { @class = "form-control" })
                        @Html.DropDownList("SortOrder", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Ilość wyników na stronie</label>
                        @Html.DropDownList("PageSize", null, new { @class = "form-control" })
                    </div>
                    <input type="submit" value="Wykonaj" class="btn btn-primary" />
                </div>
            }

        </div>
</div>

<!--FILMY-->
<div>
    @if (Model.Count > 0)
    {
        <div class="container nopadding">
            @foreach (var item in Model)
            {
                Html.RenderPartial("MoviePartial", item);
            }
        </div>
        <br />
        @:Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.SortOrder.SelectedValue, sortParam = ViewBag.SortParam.SelectedValue, genre = ViewBag.Genre.SelectedValue, countryProduction = ViewBag.CountryProduction.SelectedValue, years = ViewBag.Years.SelectedValue, pageSize = ViewBag.PageSize.SelectedValue }))

    }
    else
    {
        <h4> Brak filmów spełniających kryteria </h4>
    }
</div>



@model FilmoweJanusze.Models.Movie

@{
    ViewBag.Title = "Edycja filmu " + ViewBag.Name;
}

<h3>Edycja filmu</h3>
<h4>@ViewBag.Name</h4>
<hr />

@using (Html.BeginForm("Edit", "Movies", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MovieID)

        @Html.Partial("Form")


        <div class="form-group">
            @Html.LabelFor(model => model.Poster, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Poster)
                @Html.HiddenFor(model => model.PosterMimeType)
                @if (Model.Poster == null)
                {
                    @:brak
                }
                else
                {
                    <img width="150" height="150" src="@Url.Action("GetImage", "Movies", new { Model.MovieID })" />
                }
                <div>Prześlj nowe zdjęcie: <input type="file" name="Image" /></div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <button class="btn btn-default">
                    @Html.ActionLink("Powrót", "Details", new { id = Model.MovieID }, new { @class = "nodecoration" })
                </button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

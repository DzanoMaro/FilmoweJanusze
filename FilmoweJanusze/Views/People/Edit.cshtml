@model FilmoweJanusze.Models.People
@using FilmoweJanusze.Helpers

@{
    ViewBag.Title = "Edycja aktora " + Model.FullName;
}

<h2>Edycja aktora</h2>


@using (Html.BeginForm(Html.BeginForm("Edit", "People", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>@ViewBag.Name</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PeopleID)

    @Html.Partial("Form")

    <div class="form-group">
        @Html.LabelFor(model => model.FacePhoto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.HiddenFor(model => model.FacePhoto)
            @Html.HiddenFor(model => model.FaceMimeType)
            @if (Model.FacePhoto == null)
            {
                @:brak
            }
            else
            {
                @Html.Image(Url.Action("GetImage", "People", new { Model.PeopleID }), new { @class = "poster" })
            }
            <div>Prześlj nowe zdjęcie: <input type="file" name="Image" /></div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zapisz" class="btn btn-primary" />
            <button class="btn btn-default">
                @Html.ActionLink("Powrót", "Details", new { id = Model.PeopleID }, new { @class = "nodecoration" })
            </button>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

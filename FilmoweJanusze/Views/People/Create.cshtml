@model FilmoweJanusze.Models.People

@{
    ViewBag.Title = "Dodaj nowego artystę";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm(Html.BeginForm("Create", "People", FormMethod.Post, new { enctype = "multipart/form-data"}))) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <!--<h4>People</h4>-->
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   
    @Html.Partial("Form")

    <div class="form-group">
        @Html.LabelFor(model => model.FacePhoto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="col-md-10">
                <input type="file" name="Image" formaction="GetImage" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Dodaj" class="btn btn-default" />
            <button class="btn btn-default">
                @Html.ActionLink("Powrót", "Index", null, new { @class = "nodecoration" })
            </button>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

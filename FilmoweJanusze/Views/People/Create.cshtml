@model FilmoweJanusze.ViewModels.PeopleFormView

@{
    ViewBag.Title = "Dodaj nowego artystę";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm(Html.BeginForm("Create", "People", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Partial("Form")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
                <button class="btn btn-default">
                    @Html.ActionLink("Powrót", "Index", null, new { @class = "nodecoration" })
                </button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(ToggleRadio())
    </script>
}

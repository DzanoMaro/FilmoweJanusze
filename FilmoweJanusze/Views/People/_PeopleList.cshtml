@model PagedList.IPagedList<FilmoweJanusze.Models.People>
@using PagedList.Mvc;


@if (Model.Count > 0)
{
    <div class="container-fluid nopadding">
        @foreach (var item in Model)
        {
            Html.RenderPartial("_Tile", item);
        }
    </div>
    <br />
    @:Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.SortOrder.SelectedValue, sortParam = ViewBag.SortParam.SelectedValue, proffesion = ViewBag.Proffesion.SelectedValue, pageSize = ViewBag.PageSize.SelectedValue }))
}
else
{
    <h4> Brak wyników spełniających kryteria </h4>
}